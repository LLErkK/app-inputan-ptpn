# ===================================================
# APP CONFIGURATION
# ===================================================

# Mode aplikasi: gunakan "development" atau "production"
APP_ENV=development

# Port tempat server dijalankan
APP_PORT=8080

# ===================================================
# DATABASE CONFIGURATION
# ===================================================

# Path ke database SQLite (otomatis dibuat jika belum ada)
DB_PATH=produksi.db

# ===================================================
# SECURITY / AUTHENTICATION
# ===================================================

# Secret key untuk JWT (gunakan minimal 32 karakter acak)
JWT_SECRET=superrahasia_ubah_ini_ke_random_value_32_byte

# Durasi token dalam jam (misal 24 jam)
JWT_EXPIRE_HOURS=24

# ===================================================
# OPTIONAL SETTINGS
# ===================================================

# Jika ingin paksa cookie hanya di https
# Set ke true jika deploy di server HTTPS (misal nginx reverse proxy)
COOKIE_SECURE=false

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=rozaq123
DB_NAME=produksi_ptpn